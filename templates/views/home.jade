extends ../layout/base

block intro
	.page-header
		h1 Manage

block content
	if nav.flat
		each list in lists
			if (!list.get('hidden'))
				h3: a(href='/keystone/' + list.path)= list.label
	else
		each navSection in nav.sections
			.nav-section
				h4= navSection.label
				each list in navSection.lists
					h3: a(href='/keystone/' + list.path)= list.label
		if orphanedLists.length
			.nav-section
				h4 Other
				each list in orphanedLists
					h3: a(href='/keystone/' + list.path)= list.label
		
		
