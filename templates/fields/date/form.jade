.field(class='type-' + field.type, data-field-type=field.type, data-field-path=field.path, data-field-collapse=field.collapse ? 'true' : false, data-field-depends-on=field.dependsOn, data-field-noedit=field.noedit ? 'true' : 'false')
  label.field-label= field.label
  .field-ui(class='width-' + field.width)
    if field.noedit
      .field-value= field.format(item, 'Do MMM YYYY')
    else
      input(type='text', name=field.path, value=field.format(item, 'YYYY-MM-DD'), class='ui-datepicker', placeholder='YYYY-MM-DD', autocomplete='off').form-control
      a(href=js).btn.btn-default.btn-set-today Today
    if field.note
      .field-note!= field.note
